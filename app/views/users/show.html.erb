<table class="table table-hover">
  <tr>
    <th>User ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email-ID</th>
    <th>Role</th>
  </tr>
  <tr>
    <td><a href="/users/<%= @user.id %>">
        <%= @user.id %>
    </a></td>
    <td><%= @user.first_name %></td>
    <td><%= @user.last_name %></td>
    <td><%= @user.email %></td>
    <td><%= @user.role.designation %></td>
  </tr>
</table>
<% if is_hr || is_sd %>
<% else %>
<ul>
  <li><%= link_to "Edit", edit_user_path(@user) %></li>
    <li><%= link_to "Destroy", user_path(@user),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>
<% end %>
<%= link_to "Back", users_path %>
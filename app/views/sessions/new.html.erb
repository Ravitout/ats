<%= render "candidates/navbar"%>
<h3>Sign In</h3>
<%= form_with url: sign_in_path do |form| %>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>
  
  <div>
    <%= form.label :password %><br>
     <input type="password"<%= form.text_field :password , {required: "required"}%></input>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <% if current_user%>
  <div>
  <%= link_to "Log out", logout_path, method: :delete , class:"btn btn-outline-primary"%>  
  </div>
  <%end%>

  <% flash.each do |type, msg| %>
    <div class="alert alert-info">
     <%= msg %>
    </div>
  <% end %>
<% end %>
<%= link_to "New user?", new_user_path , class:"btn btn-outline-primary"%>
<%= link_to "Apply for jobs", new_candidate_path , class:"btn btn-outline-primary"%>
<%= link_to "Home", root_path , class:"btn btn-outline-primary"%>
